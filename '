\begin{frame}
  \begin{columns}
	\column{0.50\textwidth}
	  \fig{width = 0.90\textwidth}{figs/impl-prog-int}
	\column{0.50\textwidth}
	  \pause
	  \begin{description}
		\item[$\mathbb{P}:$]
		  \[
			\text{get, put}
		  \]
		\item[\acos$:$]
		  \[
			\text{get, put, update}
		  \]
		\item[$\mathbb{I}:$]
		  \[
			\text{get, put, guard, update}
		  \]
	  \end{description}
  \end{columns}
\end{frame}
