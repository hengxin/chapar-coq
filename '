\begin{frame}
  \uncover<4->{
	\begin{definition}[Causally Content]
	  A client program is \red{causally content} if it avoids assertion failures 
	  when executed with \acos{}.
	\end{definition}
  }

  \begin{center}
	\resizebox{0.60\textwidth}{!}{\input{tikz/impl-prog}}
  \end{center}

  \uncover<5->{
	\begin{definition}[Causally Consistent]
	  A KV store impl. is \red{causally consistent} if it satisfies \acos{}.
	\end{definition}
  }
\end{frame}
