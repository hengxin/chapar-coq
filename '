  \pause
  \begin{quote}
	\centering
	\red{Abstract:} \\[3pt]
	without referring to the details of specific implementations; \\[2pt]
	do not involving message passing.
  \end{quote}

  \pause
  \begin{quote}
	\centering
	\red{Operational:} \\[3pt]
	labelled transition system \\[2pt]
	executable \teal{\small (like TLA+)}
  \end{quote}

  \pause
  \begin{quote}
	\centering
	\red{Causal:} \\[3pt]
	\purple{explicitly track/maintain happens-before dependencies}
  \end{quote}
\end{frame}
